// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    String @id @unique
  email String

  accounts Account[]
  stores   Store[]
  orders   Order[]

  createdAt DateTime @default(now())
}

model Account {
  id String @id @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  email String  @unique
  name  String?

  createdAt DateTime @default(now())
}

model Store {
  id   String @id @unique
  name String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  products Product[]

  orders Order[]

  createdAt DateTime @default(now())
}

model Product {
  id          String  @id @unique
  name        String
  description String?

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
}

model Order {
  id          String  @id @unique
  name        String
  description String?

  buyerId String
  buyer   User   @relation(fields: [buyerId], references: [id])

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
}
